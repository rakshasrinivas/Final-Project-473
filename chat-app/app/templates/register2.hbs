<div class="container wrapper">
  <form class="form-signin">
    <h4 class="">Register</h4>
    <div class="form-group row">
      {{input type = "text" id="fName" value=name class="form-control" placeholder="Your first name here." autofocus="autofocus"}}
    </div>
    <div class="form-group row">
      {{input type = "text" id="lName" value=name class="form-control" placeholder="Your last name here."}}
    </div>
    <div class="form-group row">
      {{input type = "email" id="email" value=email class="form-control" placeholder="Your email here."}}
    </div>
    <div class="form-group row">
      {{input type = "text" id="username" value=username class="form-control" placeholder="Your username here."}}
    </div>
    <div class="form-group row">
      {{input type = "password" id="password" value=password class="form-control" placeholder="Your password here."}}
    </div>
    <div class="form-group row">
      <input type="button" class="btn btn-primary btn-block btn-login" {{action 'registerUser'}} value="Register" />
      <!-- {{input id = "registerBtn" type="button" class = "btn btn-primary btn-block btn-login" action ="registerUser()" value = "Register"}} -->
    </div>
  </form>
</div>
